source 'https://rubygems.org'

gem 'rails', '~> 5.0.0', '>= 5.0.0.1'
gem 'pg', '~> 0.18'                    # Use postgresql as the database for Active Record
gem 'puma', '~> 3.0'                   # Use Puma as the app server
